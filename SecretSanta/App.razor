@using SecretSanta.Domain.State
@using Microsoft.Extensions.Localization
@inject TelegramAuth Auth
@inject UserSantaEvents SantaEvents
@inject NavigationManager Navigation
@inject IStringLocalizer Localizer
@implements IDisposable

<LayoutView Layout="@typeof(MainLayout)">
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <div class="main-container">
                @if (Auth.IsLoggedIn)
                {
                    <CascadingValue Value="Auth.Login!">
                        <RouteView RouteData="@routeData"/>
                    </CascadingValue>
                }
                else
                {
                    <LoginWithTelegram/>
                }

                <footer class="site-footer">
                    <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                        @if (Auth.IsLoggedIn)
                        {
                            <p class="footer-text">
                                @Localizer.GetString("YouAreLoggedIn")
                                <span class="footer-user">@@@Auth.Login.Login</span>
                                Â·
                                <a class="link" style="cursor: pointer;" @onclick="LogOut">
                                    @Localizer.GetString("LogOut")
                                </a>
                            </p>
                        }
                        else
                        {
                            <p class="footer-text">
                                @Localizer.GetString("TryTelegramBot")
                                <a class="link" target="_blank" href="https://t.me/secret_santa_presents_bot">
                                    @@secret_santa_presents_bot
                                </a>
                            </p>
                        }

                        <p class="footer-text">
                            @Localizer.GetString("AppIsOpenSource")
                            <a class="link" href="https://github.com/kostya9/SecretSanta" target="_blank">GitHub</a>
                        </p>

                        <div style="display: flex; align-items: center; gap: 0.75rem; padding-top: 0.5rem;">
                            <span class="footer-text" style="font-size: 0.75rem;">Language:</span>
                            <button class="lang-btn" @onclick='() => SetLocalization("uk")'>
                                <img src="img/ua-icon.png" alt="Ukrainian"/>
                            </button>
                            <button class="lang-btn" @onclick='() => SetLocalization("en")'>
                                <img src="img/en-icon.png" alt="English"/>
                            </button>
                        </div>
                    </div>
                </footer>
            </div>
        </Found>
        <NotFound>
            <div class="main-container">
                <div class="section-box" style="text-align: center; padding: 3rem 1.5rem;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">ðŸŽ„</div>
                    <h2 class="page-title">Page Not Found</h2>
                    <p class="text-muted">Sorry, there's nothing at this address.</p>
                    <div style="margin-top: 1.5rem;">
                        <NavLink href="/" class="btn btn-primary">Go Home</NavLink>
                    </div>
                </div>
            </div>
        </NotFound>
    </Router>
</LayoutView>

@code
{
    protected override void OnInitialized()
    {
        Auth.AuthChanged += OnAuthChanged;
        base.OnInitialized();
    }

    private void OnAuthChanged(object? sender, EventArgs args)
    {
        StateHasChanged();
    }

    public void Dispose()
    {
        Auth.AuthChanged -= OnAuthChanged;
    }

    private void SetLocalization(string localization)
    {
        var uri = new Uri(Navigation.Uri)
            .GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);
        var uriEscaped = Uri.EscapeDataString(uri);
        var cultureEscaped = Uri.EscapeDataString(localization);
        Navigation.NavigateTo($"localization?culture={cultureEscaped}&redirectUri={uriEscaped}", forceLoad: true);
    }

    private void LogOut()
    {
        Auth.Logout();
        SantaEvents.Clear();
    }
}
